<%= content_tag :view, 'Invitations>', class: 'text-primary text-uppercase' %>

<div class="mx-3 mt-5">
  <% @invitations.each do |invitation| %>
    <div class='d-flex shadow p-3 px-5 justify-content-between'>
      <h3 class='text-capitalize mr-3'><%= invitation.team.creator.username %> has invited you to join <%= invitation.team.name%>  team </h3>
      <div>
        <%= link_to 'Accept', "/me/#{invitation.id}/accept", method: :put, class: 'btn  btn-success mr-2' %>
        <%= link_to 'Reject', "/me/#{invitation.id}/reject", method: :put, class: 'btn btn-danger' %>
      </div>
    </div>
  <% end %>
</div>
