
<h1 class='text-center mt-5' >New Expense</h1>
<div class="form-container">
  <%= simple_form_for @expense do |f| %>
    <%= f.input :name %>
    <%= f.input :amount, as: :integer %>
    <%= f.input :team_ids, collection: @teams, as: :check_boxes, label: 'Teams' %>
    <%= f.button :submit, "Create", class: 'btn-lg btn-success w-100' %>
  <% end %>
</div>
