<%= content_tag :view, 'External Expenses', class: 'section-title font-weight-bold text-uppercase' %>
<div class="d-flex justify-content-between align-items-center pr-5 mx-5">
  <p class='mb-0 price '>Total Amount: <%= number_to_currency(current_user.total_expenses)  %> </p>
</div>
<div class='py-3 px-2 mt-3 mr-5'>
  <div class='bg-light mx-4'>
    <div class="d-flex flex-column flex-md-row flex-wrap">
      <% @expenses.each do |expense| %>
        <%= render partial: 'expense', locals: {expense: expense} %>
      <% end%>
    </div>
    <div class="custom-btn p-4 ">
      <%= link_to 'Add New', new_expense_path, class: 'btn btn-lg custom-btn border border-white w-100' %>
    </div>
  </div>
</div>
